{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": ["--colors", "--exit"]
        },
        {
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": ["--colors", "--exit", "${file}"],
            "name": "Test Current File"
        }
    ]
}